---
import { Image } from "astro:assets";
import { organizers } from "../data/organizers";
---

<section class="px-6 py-20 md:px-10">
  <h2 class="text-center text-3xl font-medium leading-normal text-[black]">
    Women Techmakers Ambassadors
  </h2>
  <p class="text-center font-light">Cochabamba</p>
  <div
    class="mt-16 grid grid-cols-1 gap-5 md:grid-cols-1 lg:grid-cols-2 xl:grid-cols-3"
  >
    {
      organizers.map((organizer) => (
        <div class="rounded-md border-2 border-solid border-slate-200 p-3 pl-5">
          <div class="flex flex-col items-center justify-between md:flex-row md:justify-around">
            <Image
              src={organizer.img}
              alt="Organizer Photo"
              loading="lazy"
              class="h-52 w-52 rounded-2xl object-cover md:mr-3 md:h-44 md:w-44"
            />
            <div class="flex flex-col items-center justify-center">
              <h5 class="mb-1 mt-2 text-center font-light md:mt-0">
                {organizer.name}
              </h5>
              <p class="mb-2 text-center text-xs font-thin text-black text-opacity-50 md:mt-1 md:text-sm">
                {organizer.bio}
              </p>
              <div class="flex items-center space-x-2">
                {organizer.social.map((socialItem) => (
                  <a href={socialItem.src} target="_blank" rel="noopener">
                    <Image
                      class="h-5 w-5 md:h-6 md:w-6"
                      src={socialItem.social_img}
                      alt="Social Media logo"
                    />
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
