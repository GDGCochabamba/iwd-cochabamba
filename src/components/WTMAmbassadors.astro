---
import { Image } from "astro:assets";
import {organizers} from "../data/organizers"
---
<section class="py-20 px-6 md:px-10">
  <h2 class="text-center text-3xl font-medium leading-normal text-[black]">
    Women Techmakers Ambassadors
  </h2>
  <p class="text-center font-light">
    Cochabamba
  </p>
  <div class="mt-16 grid grid-cols-1 md:grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-5">
    {organizers.map((organizer) => (
      <div class="border-solid border-2 border-slate-200 pl-5 p-3 rounded-md">
        <div class="flex flex-col md:flex-row items-center justify-between md:justify-around">
          <Image
            src={organizer.img}
            alt="Organizer Photo"
            loading="lazy"
            class="rounded-2xl h-52 w-52 md:w-44 md:h-44 md:mr-3 object-cover"
          />
          <div class="flex flex-col items-center justify-center">
            <h5 class="font-light mb-1 text-center md:mt-0 mt-2">{organizer.name}</h5>
            <p class="text-xs font-thin text-black text-opacity-50 mb-2 md:mt-1 md:text-sm text-center">
              {organizer.bio}
            </p>
            <div class="flex items-center space-x-2">
              {organizer.social.map((socialItem) => (
                <a href={socialItem.src} target="_blank" rel="noopener">
                  <Image
                    class="h-5 w-5 md:h-6 md:w-6"
                    src={socialItem.social_img}
                    alt="Social Media logo"
                  />
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>


