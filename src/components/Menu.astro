---
import { Image } from "astro:assets";
import logoWtm from "../assets/images/logo-wtm-cochabamba-horizontal.svg";
---

<nav class="fixed left-0 top-0 w-full py-3">
  <div class="flex justify-between px-4">
    <a href="/" class="flex items-center">
      <Image
        class="w-[120px] md:w-[220px]"
        src={logoWtm}
        alt="Logo WTM Cochabamba"
      />
    </a>
  </div>
</nav>
<style>
  nav {
    background: #c1e4fd;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
  }
</style>
